{
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "error",
          {
            "allow": ["log", "warn"]
          }
        ],
        "space-before-function-paren": [
          "error",
          "always"
        ],
        "object-curly-spacing": ["error", "always"],
        "no-floating-decimal": ["error"]
    },
    "globals": {
        "_" : true
    }
}
